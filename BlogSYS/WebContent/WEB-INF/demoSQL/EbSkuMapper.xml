  <select id="selectSkuDetail" parameterType="Long" resultMap="skuDetailMap">
		select *
		  from eb_sku es
		  join eb_item ei
		    on ei.item_id = es.item_id
		  join eb_spec_value epv
		    on es.sku_id = epv.sku_id
		 where es.sku_id = #{skuId}
  </select>
  
  
  <update id="updateSotckById" parameterType="map">
  	update eb_sku t
   set t.stock_inventory = t.stock_inventory - #{count},
       t.version = #{version} + 1
 where t.sku_id = #{skuId}
   and t.version = #{version}
   and t.stock_inventory >= #{count}
  </update>
